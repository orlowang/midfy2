@import 'styleguide';

.root{
  width: 100%;
  height: 100%;
  position: relative;
}
.fmLeft{
  width: $fmLeftWidth;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;

  :global(.userareaComp){
    padding-top: $usrAreaPaddingTop;
    background-color: darken($mainColor, 20%);
    >div{
      border: $usrImgBorderSize solid $mainColor;
    }
  }
}
.menu{
  >li{
    line-height: $menuListHeight;
    // 菜单边框
    // border-bottom: 1rem solid darken($mainColor, 20%);

    // &:first-child{
    //   border-top: 1rem solid darken($mainColor, 20%);
    // }
    &:hover{
      background-color: darken($mainColor, 20%);
      cursor: pointer;
    }

    svg{
      height: ($menuListHeight / 2);
      width: ($menuListHeight / 2);
      margin: ($menuListHeight / 4);

      path{
        fill: #fff;
      }
    }

    >ul{
      transition: all 300ms;
      background-color: $mainBgColor;
      // >li:last-child{
      //   margin-bottom: -1rem;
      // }
    }
  }

  a{
    :global(&.active){
      background-color: darken($mainColor, 20%);
    }
  }
}



.fmRight{
  width: 100%;
  padding-left: $fmLeftWidth;
  box-sizing: border-box;
  height: 100%;
}
.fmTop{
  height: $fmTopHeight;
  background-color: lighten($mainColor, 95%);
  display: flex;
  align-items: center;

  :global(.message){
    >ul{
      right: 50rem;
      top: $fmTopHeight;
    }
  }
  :global(.exit){
    background-color: lighten($mainColor, 80%);
  }
}

.bodyWrap{
  width: 100%;
  height: 100%;
  overflow: auto;
}

// MODULE setting ------------------------------------------
.setting{
  padding: 50rem;
  .title{
    font-size: 1.4em;
    font-weight: 200;
    margin-bottom: 20rem;
  }
  .list{
    margin-bottom: 50rem;
  }
  .keylist{
    padding-left: 20rem;
    display: flex;
    .key{
      display: inline-block;
      margin-right: 20rem;
      width: 48rem;
      height: 48rem;
      border: 2rem solid #fff;
      border-radius: 4rem;
      box-shadow: 1rem 1rem 2rem rgba(0, 0, 0, .2);

      &.last-child{
        margin-right: 0;
      }

      &:hover{
        cursor: pointer;
      }
    }

    .input{
      margin-top: 32rem;
      width: 240rem;
      >input{
        padding-top: 4rem;
        padding-bottom: 4rem;
        border-color: lighten($mainColor, 90%);

        &:focus{
          border-color: $themeColor;
        }

        &+span{
          color: lighten($mainColor, 60%);
          font-weight: 200;
        }
      }
    }
  }
  .switch{
    input+span{
      width: 48rem;
      margin-left: 40rem;
      border-color: $themeColor;
      background-color: lighten($mainColor, 90%);
      i{
        background-color: #fff;
      }
    }
    input:checked+span{
      background-color: $themeColor;
    }
  }

  .upload{
    margin-right: 40rem;

    :global(.view){
      border-radius: 4rem;
    }
  }
}